{
	"name": "root",
	"workspaces": [
		"packages/*"
	],
	"private": true,
	"scripts": {
		"clean": "node scripts/clean.mjs",
		"lint": "eslint packages/ --fix --ext ts,tsx",
		"format": "prettier --write --loglevel=warn \"packages/**/src/**\"",
		"prebuild": "yarn clean",
		"start": "yarn workspace @skyra/discord-components-core start",
		"build": "run-s build:core build:react",
		"postbuild": "yarn lint && yarn format",
		"build:core": "yarn workspace @skyra/discord-components-core build",
		"build:react": "yarn workspace @skyra/discord-components-react build",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest",
		"prepare": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.2.1",
		"@commitlint/config-conventional": "^13.2.0",
		"@sapphire/eslint-config": "^4.0.1",
		"@sapphire/prettier-config": "^1.2.3",
		"@sapphire/ts-config": "^3.1.2",
		"@stencil/react-output-target": "^0.1.0",
		"@types/node": "^16.10.3",
		"@types/react": "17.0.32",
		"@types/react-dom": "17.0.10",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"cz-conventional-changelog": "^3.3.0",
		"esbuild": "^0.13.9",
		"eslint": "^8.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.26.1",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^7.0.4",
		"lerna": "^4.0.0",
		"lint-staged": "^11.2.4",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"rollup": "^2.58.0",
		"rollup-plugin-dts": "^4.0.0",
		"typescript": "^4.4.4"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts,tsx}": "eslint --fix --ext mjs,js,ts,tsx"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.5.0",
		"@types/react": "17.0.32",
		"@types/react-dom": "17.0.10"
	},
	"prettier": "@sapphire/prettier-config"
}
