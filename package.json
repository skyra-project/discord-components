{
	"name": "root",
	"workspaces": [
		"packages/*"
	],
	"private": true,
	"scripts": {
		"clean": "rimraf packages/core/dist packages/core/loader packages/core/www packages/react/src packages/react/dist",
		"lint": "eslint packages/ --fix --ext ts,tsx",
		"format": "prettier --write --loglevel=warn \"packages/**/src/**\"",
		"prebuild": "yarn clean",
		"build": "run-s build:core build:react",
		"postbuild": "yarn lint && yarn format",
		"build:core": "yarn workspace @skyra/discord-components-core build",
		"build:react": "yarn workspace @skyra/discord-components-react build",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@favware/eslint-config": "^6.0.2",
		"@favware/eslint-config-react-app": "^2.0.2",
		"@favware/ts-config": "^3.0.4",
		"@types/node": "^14.14.6",
		"@types/react": "16.9.55",
		"@types/react-dom": "16.9.9",
		"@typescript-eslint/eslint-plugin": "^4.6.0",
		"@typescript-eslint/parser": "^4.6.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.12.1",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "^7.21.5",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^4.3.0",
		"lerna": "^3.22.1",
		"lint-staged": "^10.4.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.2",
		"pretty-quick": "^3.1.0",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"rimraf": "^3.0.2",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.5"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn pretty-quick --staged && yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts,tsx}": "eslint --fix --ext mjs,js,ts,tsx"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.0.4",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^6.0.0"
	}
}
