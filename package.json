{
	"name": "root",
	"workspaces": [
		"packages/*"
	],
	"private": true,
	"scripts": {
		"clean": "node scripts/clean.mjs",
		"lint": "eslint packages/ --fix --ext ts,tsx",
		"format": "prettier --write --loglevel=warn \"packages/**/src/**\"",
		"prebuild": "yarn clean",
		"start": "yarn workspace @skyra/discord-components-core start",
		"build": "yarn build:core && yarn build:react && yarn lint && yarn format",
		"build:core": "yarn workspace @skyra/discord-components-core build",
		"build:react": "yarn workspace @skyra/discord-components-react build",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest",
		"prepare": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^14.1.0",
		"@commitlint/config-conventional": "^14.1.0",
		"@sapphire/eslint-config": "^4.0.4",
		"@sapphire/prettier-config": "^1.2.4",
		"@sapphire/ts-config": "^3.1.4",
		"@stencil/react-output-target": "^0.1.0",
		"@types/node": "^16.11.7",
		"@types/react": "17.0.34",
		"@types/react-dom": "17.0.11",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.2.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.27.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"gen-esm-wrapper": "^1.1.3",
		"husky": "^7.0.4",
		"lerna": "^4.0.0",
		"lint-staged": "^12.0.2",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"replace-in-file": "^6.3.2",
		"typescript": "^4.4.4"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts,tsx}": "eslint --fix --ext mjs,js,ts,tsx"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.1.0"
}
