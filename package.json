{
	"name": "root",
	"workspaces": [
		"packages/*"
	],
	"private": true,
	"scripts": {
		"clean": "rimraf packages/core/dist packages/core/loader packages/core/www packages/react/src packages/react/dist",
		"lint": "eslint packages/ --fix --ext ts,tsx",
		"prebuild": "yarn clean",
		"build": "run-s build:core build:react",
		"build:core": "yarn workspace @skyra/discord-components-core build",
		"build:react": "yarn workspace @skyra/discord-components-react build",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest"
	},
	"devDependencies": {
		"@commitlint/cli": "^9.1.2",
		"@commitlint/config-conventional": "^9.1.2",
		"@favware/eslint-config-react-app": "^1.1.2",
		"@favware/ts-config": "^3.0.3",
		"@types/node": "^14.6.2",
		"@types/react": "^16.9.48",
		"@types/react-dom": "^16.9.8",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^4.2.5",
		"lerna": "^3.22.1",
		"lint-staged": "^10.2.13",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.1.1",
		"pretty-quick": "^3.0.0",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"rimraf": "^3.0.2",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.2"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn pretty-quick --staged && yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts,tsx}": "eslint --fix --ext mjs,js,ts,tsx"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^7.2.0",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"dot-prop": "^5.2.0"
	}
}
