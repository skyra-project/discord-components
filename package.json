{
	"name": "root",
	"workspaces": [
		"packages/*"
	],
	"private": true,
	"scripts": {
		"clean": "node scripts/clean.mjs",
		"lint": "eslint packages/ --fix --ext ts,tsx",
		"format": "prettier --write --loglevel=warn \"packages/**/src/**\"",
		"inject-readme-markdown": "node scripts/inject-readme-markdown.mjs",
		"start": "yarn workspace @skyra/discord-components-core start",
		"build": "yarn clean && yarn build:core && yarn build:react && yarn lint && yarn format",
		"build:core": "yarn workspace @skyra/discord-components-core build",
		"build:react": "yarn workspace @skyra/discord-components-react build",
		"postinstall": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.6.3",
		"@commitlint/config-conventional": "^17.6.3",
		"@favware/skip-dependency": "^1.2.1",
		"@lerna-lite/cli": "^2.3.0",
		"@sapphire/eslint-config": "^4.4.2",
		"@sapphire/prettier-config": "^1.4.5",
		"@sapphire/ts-config": "^3.3.4",
		"@types/node": "^18.16.6",
		"@types/react": "^18.2.6",
		"@typescript-eslint/eslint-plugin": "^5.59.5",
		"@typescript-eslint/parser": "^5.59.5",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.40.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-lit": "^1.8.3",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"markdown-toc": "^1.2.0",
		"prettier": "^2.8.8",
		"pretty-quick": "^3.1.3",
		"react": "^18.2.0",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5"
	},
	"resolutions": {
		"ansi-regex": "^5.0.1",
		"minimist": "^1.2.8",
		"typescript": "^4.9.5",
		"@types/react": "^18.2.6",
		"@types/react-dom": "^18.2.4"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts,tsx}": "eslint --fix --ext mjs,js,ts,tsx"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"packageManager": "yarn@3.6.1"
}
