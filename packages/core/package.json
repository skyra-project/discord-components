{
	"name": "@skyra/discord-components-core",
	"version": "3.6.1",
	"description": "Web components to easily build and display fake Discord messages on your webpages.",
	"author": "@skyra",
	"license": "MIT",
	"main": "dist/src/index.js",
	"module": "dist/src/index.js",
	"types": "dist/src/index.d.ts",
	"type": "module",
	"customElements": "custom-elements.json",
	"exports": {
		".": "./dist/src/index.js",
		"./discord-messages.js": "./dist/src/components/discord-messages/DiscordMessages.js",
		"./discord-message.js": "./dist/src/components/discord-message/DiscordMessage.js",
		"./author-info.js": "./dist/src/components/author-info/AuthorInfo.js"
	},
	"sideEffects": [
		"./dist/src/index.js",
		"./dist/src/components/discord-messages/DiscordMessages.js",
		"./dist/src/components/discord-message/DiscordMessage.js",
		"./dist/src/components/author-info/AuthorInfo.js"
	],
	"homepage": "https://github.com/skyra-project/discord-components/tree/main/packages/core#readme",
	"scripts": {
		"analyze": "cem analyze --litelement",
		"start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
		"build": "tsc && yarn analyze --exclude dist",
		"prepack": "tsc && yarn analyze --exclude dist",
		"lint": "eslint --ext .ts --fix",
		"format": "prettier \"**/*.ts\" --write --ignore-path .gitignore",
		"test": "tsc && wtr --coverage",
		"test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
		"storybook": "tsc && yarn analyze --exclude dist && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
		"storybook:build": "tsc && yarn analyze --exclude dist && build-storybook"
	},
	"dependencies": {
		"hex-to-rgba": "^2.0.1",
		"lit": "^2.2.5",
		"tslib": "^2.4.0"
	},
	"devDependencies": {
		"@custom-elements-manifest/analyzer": "^0.4.17",
		"@open-wc/eslint-config": "^4.3.0",
		"@open-wc/testing": "next",
		"@web/dev-server": "^0.1.28",
		"@web/dev-server-storybook": "next",
		"@web/test-runner": "next",
		"concurrently": "^5.3.0"
	},
	"files": [
		"dist/"
	],
	"engines": {
		"node": ">=v14"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skyra-project/discord-components.git"
	},
	"bugs": {
		"url": "https://github.com/skyra-project/discord-components/issues"
	},
	"keywords": [
		"skyra",
		"typescript",
		"ts",
		"yarn",
		"discord",
		"bot",
		"components",
		"webcomponents",
		"lit"
	]
}
